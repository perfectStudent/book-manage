<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.wmkfe.bookmanage.dao.ReaderMapper">
    <insert id="add" parameterType="cn.wmkfe.bookmanage.model.Reader">
       insert into t_reader (reader_id, password, t_reader.name, gender, avatar, phone, department, class)
       values (#{readerId},#{password},#{name},#{gender},#{avatar},#{phone},#{department},#{class})
    </insert>
    <delete id="delete">
        delete from t_reader
        where reader_id in
        <foreach collection="array" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </delete>

    <update id="update" parameterType="cn.wmkfe.bookmanage.model.Reader">
        update t_reader
        <set>
            <if test="readerId !=null and readerId!=''">
                reader_id=#{readerId},
            </if>
            <if test="password !=null and password!=''">
                password=#{password},
            </if>
            <if test="name !=null and name!=''">
                t_reader.name=#{name},
            </if>
            <if test="gender !=null">
                t_Reader.gender=#{gender},
            </if>
            <if test="avatar !=null and avatar!=''">
                avatar=#{avatar},
            </if>
            <if test="phone !=null and phone!=''">
                t_Reader.phone=#{phone},
            </if>
            <if test="department !=null">
                department=#{department},
            </if>
            <if test="class !=null">
                class=#{class}
            </if>
        </set>
        where reader_id=#{readerId}
    </update>

    <select id="getByReaderId" resultMap="readerMap">
        select r.reader_id, r.password, r.name, r.gender, r.avatar, r.phone, r.department, r.class,
                 g.gender_name, c_t.class_name,d.department_name
        from t_reader as r
        left join t_gender as g
        on r.gender=g.id
        left join t_class_table as c_t
        on r.class=c_t.id
        LEFT JOIN t_department AS d
        ON r.department = d.id
        where reader_id=#{readerId}
    </select>


    <resultMap id="readerMap" type="cn.wmkfe.bookmanage.model.Reader">
        <id column="reader_id" property="readerId"></id>
        <result column="password" property="password"></result>
        <result column="name" property="name"></result>
        <result column="gender" property="gender"></result>
        <result column="avatar" property="avatar"></result>
        <result column="phone" property="phone"></result>
        <result column="department" property="department"></result>
        <result column="class" property="class"></result>
        <association property="book" javaType="cn.wmkfe.bookmanage.model.Book">
            <result column="gender_name" property="genderName"></result>
        </association>
        <association property="classTable" javaType="cn.wmkfe.bookmanage.model.ClassTable">
            <result column="class_name" property="className"></result>
        </association>
    </resultMap>

    <select id="getList" resultMap="getListMap">
        select r.reader_id, r.password, r.name, r.gender, r.avatar, r.phone, r.department, r.class,
        g.gender_name, c_t.class_name,d.department_name
        from t_reader as r
        left join t_gender as g
        on r.gender=g.id
        left join t_class_table as c_t
        on r.class=c_t.id
        LEFT JOIN t_department AS d
        ON r.department = d.id
        <where>
            <if test="keyword!=null and keyword!=''">
                INSTR (r.name,#{keyword}) OR INSTR(c_t.class_name,#{keyword})
            </if>
        </where>
        order by r.reader_id ASC limit ${from},${pageSize}
    </select>

    <resultMap id="getListMap" type="cn.wmkfe.bookmanage.model.Reader">
        <id column="reader_id" property="readerId"></id>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="avatar" property="avatar"/>
        <result column="phone" property="phone"/>
        <result column="department" property="department"/>
        <result column="class" property="classId"/>
        <association property="genderModel" javaType="cn.wmkfe.bookmanage.model.Gender">
            <result column="gender_name" property="genderName"/>
        </association>
        <association property="classTable" javaType="cn.wmkfe.bookmanage.model.ClassTable">
            <result column="class_name" property="className"/>
        </association>
        <association property="departmentModel" javaType="cn.wmkfe.bookmanage.model.Department">
            <result column="department_name" property="departmentName"/>
        </association>
    </resultMap>


    <select id="getTotal" resultType="int">
        select count(reader_id)
        from t_reader as r
        <where>
            <if test="keyword!=null and keyword!=''">
                INSTR (r.name,#{keyword}) OR INSTR(c_t.class_name,#{keyword})
            </if>
        </where>
    </select>
</mapper>